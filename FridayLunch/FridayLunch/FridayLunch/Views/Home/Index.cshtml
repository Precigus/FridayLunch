@{
    ViewBag.Title = "Friday Lunch";
}

<body>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="main-form-container">
            <h2>Friday Lunch</h2>
            <div class="form-group">
                <input type="text" class="inputlg" placeholder="Username" id="usr">
            </div>
            <div class="form-group">
                <input type="password" class="inputlg" placeholder="Password" id="pwd">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
            <li class="onclick-alert" onclick="myFunction()">Forgot password?</li>
            <li>@Html.ActionLink("Change", "ChangePassword", "Home")</li>
        </div>
    </div>
</body>
