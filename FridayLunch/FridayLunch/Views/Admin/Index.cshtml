                @Html.CheckBoxFor(m => m.IsIncludedSideDish) Drink included
            </label>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Side dish")
        @Html.TextBoxFor(m => m.SideDish, new { @class = "form-control" })
        
    </div>
    <div class="form-group">
        @Html.Label("Soup")
        @Html.TextBoxFor(m => m.Soup, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Drink")
        @Html.TextBoxFor(m => m.Drink, new { @class = "form-control" })
        @*<label>
            @Html.CheckBoxFor(m => m.IsIncludedSideDish) Drink included
        </label>*@
    </div>
</div>

