    /**/

    ViewBag.Title = "Admin-Menu entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 text-align: center>Menu Entry</h2>

@using (Html.BeginForm("Create", "Admin"))
{
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="form-group">
        @Html.Label("Main dish")
        @Html.TextBoxFor(m => m.MainDish, new { @class = "form-control" })
