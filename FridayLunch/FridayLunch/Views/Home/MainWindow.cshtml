@{
    ViewBag.Title = "Friday Lunch";
}

<body>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="main-form-container bigger-width flex-container">
            <div class="flex-box-1">
                <div class="form-group">
                    <h3>Main dish:</h3>
                    <select class="selectpicker form-control">
                        <option>Food</option>
                    </select>
                    <h3>Soop:</h3>
                    <select class="selectpicker form-control">
                        <option>Soop</option>
                    </select>
                    <h3>Garnish:</h3>
                    <select class="selectpicker form-control">
                        <option>Garnish</option>
                    </select>
                    <h3>Drink:</h3>
                    <select class="selectpicker form-control">
                        <option>Drink</option>
                    </select>
                    <h3>Floor:</h3>
                    <select class="selectpicker form-control">
                        <option>3</option>
                        <option>5</option>
                    </select>
                    <h3>My comment:</h3>
                    <input type="text" class="inputlg form-control" placeholder="No comment" id="comment"><br />
                    <button type="submit" class="btn btn-default form-control">Submit my order!</button>

                </div>
            </div>
            <div class="flex-box-2">
                <div class="flex-box-3">
                    <h3>Admin notes:</h3>
                    <p>Follow these notes</p>
                </div>
                <div class="flex-box-4">
                    <img src="http://chicken-house.lt/wp-content/uploads/2015/12/Meniu.jpg" />
                </div>
            </div>
       </div>
    </div>
</body>
